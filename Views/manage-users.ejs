<div class="container">
    <div class="table-wrapper">
        <div class="table-title">
            <div class="row">
                <div class="col">
                    <div class="title">
                        <i class="uil uil-arrow"></i>
                        <span class="text table-title">All Users</span>
                    </div>
                </div>
                <div class="col-4"> </div>
                <div class="col">
                    <a href="#addEmployeeModal" class="btn btn-secondary" data-toggle="modal">
                        <i class="uil uil-plus"></i><span>Add New User</span>
                    </a>
                </div>
            </div>
        </div>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th class="text-center">
                        <!-- id ? -->
                    </th>
                    <th>UserName</th>
                    <th>FirstName</th>
                    <th>LastName</th>
                    <th>Email</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(user => { %>
                    <tr>
                        <td class="text-center">
                            <!-- count ? -->
                        </td>
                        <td>
                                <span class="data-list"><%= user.username %></span>
                        </td>
                        <td>
                                <span class="data-list"><%= user.firstName %></span>
                        </td>
                        <td>
                            <span class="data-list"><%= user.lastName %></span>
                        </td>
                        <td>
                            <span class="data-list"><%= user.email %></span>
                        </td>
                        <td>
                            <span class="data-list"><%= user.usertype %></span>
                        </td>
                        <td>
                            <a href="#editEmployeeModal" class="edit" data-toggle="modal">
                                <i class="uil uil-edit" data-toggle="tooltip" title="Edit"></i>
                            </a>
                            <a href="#deleteEmployeeModal" class="delete" data-toggle="modal">
                                <i class="uil uil-times-square" data-toggle="tooltip" title="delete"></i>
                            </a>
                        </td>
                    </tr>
                <% });%>
            </tbody>
        </table>

    </div>
</div>