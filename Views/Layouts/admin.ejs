<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!----======== CSS ======== -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="css\navbar.css">
    <link rel="stylesheet" href="css\card.css">
    <script src="https://code.jquery.com/jquery-3.6.1.min.js"
        integrity="sha256-o88AwQnZB+VDvE9tvIXrMQaPlFFSUTR+nldQm1LuPXQ=" crossorigin="anonymous"></script>
    <!----===== Iconscout CSS ===== -->
    <link rel="stylesheet" href="https://unicons.iconscout.com/release/v4.0.0/css/line.css">
    <script
    src="https://code.jquery.com/jquery-3.6.1.min.js"
    integrity="sha256-o88AwQnZB+VDvE9tvIXrMQaPlFFSUTR+nldQm1LuPXQ="
    crossorigin="anonymous"
  ></script>



    <title>Public API Homepage</title>
</head>

<body>
    <nav>
        <div class="logo-name">
            <div class="logo-image">
                <!--<img src="images/logo.png" alt="">-->
            </div>

            <span class="logo_name">Public API</span>
        </div>

        <div class="menu-items">
            <ul class="nav-links">
                <li><a class="active" href="#">
                        <i class="uil uil-estate active-icon"></i>
                        <span class="active-text">Dashboard</span>
                    </a></li>
                <li><a href="#">
                        <i class="uil uil-arrow non-active-icon"></i>
                        <span class="link-name">Manage APIs</span>
                    </a></li>
                <li><a href="#">
                        <i class="uil uil-users-alt non-active-icon"></i>
                        <span class="link-name">Manage Users</span>
                    </a></li>
                </a></li>
                <li><a href="#">
                        <i class="uil uil-bars non-active-icon"></i>
                        <span class="link-name">Manage Categories</span>
                    </a></li>
            </ul>

            <ul class="logout-mode">

                <li><a href="#">
                        <i class="uil uil-clock non-active-icon"></i>
                        <span class="link-name">Latest APIs</span>
                    </a></li>
                <li><a href="#">
                        <i class="uil uil-thumbs-up non-active-icon"></i>
                        <span class="link-name">Best Rated APIs</span>
                    </a></li>
                <li><a href="#">
                        <i class="uil uil-arrow-random non-active-icon"></i>
                        <span class="link-name">Random APIs</span>
                    </a></li>
                <li><a href="#">
                        <i class="uil-favorite non-active-icon"></i>
                        <span class="link-name">Bookmarks</span>
                    </a></li>
                <li><a href="#">
                        <i class="uil uil-plus non-active-icon"></i>
                        <span class="link-name">Add API</span>
                    </a></li>

            </ul>

            <ul class="logout-mode">

                <li><a href="#">
                        <i class="uil-user non-active-icon"></i>
                        <span class="link-name">Profile</span>
                    </a></li>

                <li><a href="#" id="logout-btn">
                        <i class="uil uil-signout non-active-icon"></i>
                        <span class="link-name">Logout</span>
                    </a></li>

                <li class="mode">
                    <a href="#">
                        <i class="uil uil-moon non-active-icon"></i>
                        <span class="link-name">Dark Mode</span>
                    </a>

                    <div class="mode-toggle">
                        <span class="switch"></span>
                    </div>
                </li>
            </ul>
        </div>
    </nav>

    <section class="dashboard">
        <div class="top">
            <i class="uil uil-bars sidebar-toggle"></i>

            <div class="search-box">
                <i class="uil uil-search"></i>
                <input type="text" placeholder="Search here...">
            </div>

            <!-- this is the checkbox parameters for the search -->
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="checkbox" id="Checkbox1" value="Name" checked>
                <label class="form-check-label" for="inlineCheckbox1">Name</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="checkbox" id="Checkbox2" value="Category" checked>
                <label class="form-check-label" for="inlineCheckbox2">Category</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="checkbox" id="Checkbox3" value="Upload By" checked>
                <label class="form-check-label" for="inlineCheckbox2">Upload By</label>
            </div>

            <!--<img src="images/profile.jpg" alt="">-->
        </div>

        <div id="main" class="dash-content">
            <%- body %>

        </div>


    </section>

    <%- include("../partials/navbar.ejs") %>
    <%- include("../partials/submitScript.ejs") %>
</body>

</html>