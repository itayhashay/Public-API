<link rel="stylesheet" href="css\login.css" />
<div id="section" class="h-100">
  <section class="contact-wrap">
    <form action="" class="contact-form">
      <h3 id="title">Login</h3>
      <div class="col-sm-6">
        <div class="input-block">
          <label for="">Username</label>
          <input type="text" class="form-control" id="username" />
        </div>
      </div>
      <div class="col-sm-6">
        <div class="input-block">
          <label for="">Password</label>
          <input type="password" class="form-control" id="password" />
        </div>
        <div class="col-sm-12">
          <button class="square-button" id="btn-send">Send</button>
        </div>
        <div class="col-sm-12">
          <div class="input-block" id="sign-link">
            <link class="form__text">
            <a class="form__link" href="/sign-up" id="linkCreateAccount">Don't have an account? Create new account</a>
            </link>
          </div>
        </div>
        <div class="col-sm-12">
          <div style="color: red" id="validation">

          </div>
        </div>
    </form>
  </section>
</div>

<script type="text/javascript" src="js/login.js"></script>