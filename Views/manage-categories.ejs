<script type="text/javascript" src="js/delete-category.js"></script>
<div class="container">
    <div class="table-wrapper">
        <div class="table-title">
            <div class="row">
                <div class="col">
                    <div class="title">
                        <i class="uil uil-arrow"></i>
                        <span class="text table-title">All Categories</span>
                    </div>
                </div>
                <div class="col-4"> </div>
                <div class="col">
                    <a href="#addEmployeeModal" class="btn btn-secondary" data-toggle="modal">
                        <i class="uil uil-plus"></i><span>Add New Category</span>
                    </a>
                </div>
            </div>
        </div>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th class="text-center">
                        <!-- id ? -->
                    </th>
                    <th>Name</th>
                    <!-- <th>ID</th> -->
                    <th>Description</th>
                    <th>APIs</th>
                    <!-- <th>Phone</th> -->
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% categories.forEach(cat=> { %>
                    <tr>
                        <td class="text-center">
                            <!-- count ? -->
                        </td>
                        <td>
                            <span class="data-list">
                                <%= cat.name %>
                            </span>
                        </td>
                        <td>
                            <span class="data-list">
                                <%= cat.description %>
                            </span>
                        </td>
                        <td>
                            <span class="data-list">
                                <%= cat.description %>
                            </span>
                        </td>
                        <td>
                            <a href="#editEmployeeModal" class="edit" data-toggle="modal">
                                <i class="uil uil-edit" data-toggle="tooltip" title="Edit"></i>
                            </a>
                            <a style="cursor: pointer" class="delete delete-category" data-id=<%=cat.id %>
                                data-toggle=" modal">
                                <i class="uil uil-times-square" data-toggle="tooltip" title="delete"></i>
                            </a>
                        </td>
                    </tr>
                    <% });%>
            </tbody>
        </table>

    </div>
</div>